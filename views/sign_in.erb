<div class="form">
  <h2>Sign In</h2>
  <form method="post" action="/sign_in" class="credentials">
    <dl>
      <dt>
        <label for="username">Username:</label>
      </dt>
      <dd>
        <input name="username" id="username" placeholder="" type="text" value="<%= params[:username] %>">
      </dd>
    </dl>
    <dl>
      <dt>
        <label for="password">Password:</label>
      </dt>
      <dd>
        <input name="password" id="password" placeholder="" type="password" value="">
      </dd>
    </dl>
    <button type="submit">Sign In</button>
    <p><%= session.delete(:message) %></p>
  </form>
  <p>Don't have an account? <a href="/sign_up">Sign Up!</a><p>
</div>
